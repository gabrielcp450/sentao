Programa      : Acao
              | Acao Programa

Acao          : DeclVariavel
              | DeclFuncao
              | Funcao 
              | Atribuicao
              | Condicao
              | Ciclo

Escopo        : '{' entrar Programa '}'

entrar        :

DeclVariavel  : Tipo LDeclVariaveis

Tipo          : INTEIRO
              | REAL 
              | AUTO
              | DYNAMIC
              | CARACTER
              | CARACTERES
              | Tipo [ INT ]

LDeclVariaveis: DeclAtriVariavel
              | DeclAtriVariavel "," LDeclVariaveis

DeclAtriVariavel: ID
                | ID = Expressao 

Atribuicao    : ID = Expressao

Funcao        : ID "(" ")"
              | _ESCREVE "(" ARG ")"
              | _ESCREVER  "(" ARG ")"
              | _ESCREVER "(" ARG ")"
              | _LER "(" ")"
              | _LERI "(" ")"
              | _LERR "(" ")"

Indexacao     : ID "[" INT "]"

Expressao     : ID
              | TipoConstante
              | Funcao
              | Indexacao
              | Expressao OpBinario Expressao
              | OpUnario Expressao
              | ( Expressao )

OpBinario     : SOMA
              | SUBT
              | MULT
              | DIV
              | MOD
              | MENORQ
              | MAIORQ
              | MENORIG
              | MAIORIG
              | IG
              | DIF
              | E
              | OU

OpUnario      : NEG
              | SUBT

TipoConstante : INT
              | REAL
              | CAR
              | CARS
              | BOOL
              | [ LTipoConstante ]

LTipoConstante: TipoConstante
              | TipoConstante , LTipoConstante

Condicao      : _SE "(" Expressao ")" _ENTAO Escopo 
              | _SE "(" Expressao ")" _ENTAO Escopo _SENAO Escopo
              | _SE "(" Expressao ")" _ENTAO Escopo _SENAO Condicao

Ciclo         : _PARA ID _NO _INTERVALO "(" INT "," INT ")" Escopo
              | _ENQUANTO "(" Expressao ")" _FACA Escopo
              | _REPITA Escopo _ATE _QUE "(" Expressao ")"

DeclFuncao    : Tipo ID "(" ")" "{" Programa _RETORNA Expressao "}"
              | Tipo ID "(" ")" "{" _RETORNA Expressao "}"